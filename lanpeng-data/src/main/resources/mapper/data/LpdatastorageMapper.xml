<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.lanpeng.data.mapper.LpdatastorageMapper">
    
    <resultMap type="Lpdatastorage" id="LpdatastorageResult">
        <result property="id"    column="id"    />
        <result property="name"    column="name"    />
        <result property="moduleInfoId"    column="moduleInfoId"    />
        <result property="moduleInfoName"    column="moduleInfoName"    />
        <result property="code"    column="code"    />
        <result property="type"    column="type"    />
        <result property="dbConnectionId"    column="dbConnectionId"    />
        <result property="dbConnectionName"    column="dbConnectionName"    />
        <result property="description"    column="description"    />
        <result property="delFlag"    column="del_flag"    />
        <result property="createBy"    column="create_by"    />
        <result property="createTime"    column="create_time"    />
        <result property="updateBy"    column="update_by"    />
        <result property="updateTime"    column="update_time"    />
        <result property="remark"    column="remark"    />
    </resultMap>

    <select id="selectLpdatastorageList" parameterType="Lpdatastorage" resultMap="LpdatastorageResult">
        select ds.id, ds.name, ds.moduleInfoId, ds.code, ds.type, ds.dbConnectionId, ds.description,
               ds.del_flag, ds.create_by, ds.create_time, ds.update_by, ds.update_time, ds.remark,
               m.name as moduleInfoName,c.name as dbConnectionName
        from datastorage ds
            left join moduleinfo m on m.id = ds.moduleInfoId
            left join dbconnection c on c.id = ds.dbConnectionId
        <where>  
            <if test="name != null  and name != ''"> and ds.name like concat('%', #{name}, '%')</if>
            <if test="moduleInfoName != null  and moduleInfoName != ''"> and m.name like concat('%', #{moduleInfoName}, '%')</if>
            <if test="dbConnectionName != null  and dbConnectionName != ''"> and c.name like concat('%', #{dbConnectionName}, '%')</if>
            <if test="code != null  and code != ''"> and ds.code like concat('%', #{code}, '%')</if>
            <if test="type != null  and type != ''"> and ds.type like concat('%', #{type}, '%')</if>
            <if test="description != null  and description != ''"> and ds.description like concat('%', #{description}, '%')</if>
        </where>
        order by ds.id asc
    </select>
    
    <select id="selectLpdatastorageById" parameterType="Long" resultMap="LpdatastorageResult">
        select ds.id, ds.name, ds.moduleInfoId, ds.code, ds.type, ds.dbConnectionId, ds.description,
               ds.del_flag, ds.create_by, ds.create_time, ds.update_by, ds.update_time, ds.remark,
               m.name as moduleInfoName,c.name as dbConnectionName
        from datastorage ds
                 left join moduleinfo m on m.id = ds.moduleInfoId
                 left join dbconnection c on c.id = ds.dbConnectionId
        where ds.id = #{id}
    </select>
        
    <insert id="insertLpdatastorage" parameterType="Lpdatastorage" useGeneratedKeys="true" keyProperty="id">
        insert into datastorage
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="name != null and name != ''">name,</if>
            <if test="moduleInfoId != null">moduleInfoId,</if>
            <if test="code != null and code != ''">code,</if>
            <if test="type != null and type != ''">type,</if>
            <if test="dbConnectionId != null">dbConnectionId,</if>
            <if test="description != null and description != ''">description,</if>
            <if test="delFlag != null">del_flag,</if>
            <if test="createBy != null">create_by,</if>
            <if test="createTime != null">create_time,</if>
            <if test="updateBy != null">update_by,</if>
            <if test="updateTime != null">update_time,</if>
            <if test="remark != null">remark,</if>
         </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="name != null and name != ''">#{name},</if>
            <if test="moduleInfoId != null">#{moduleInfoId},</if>
            <if test="code != null and code != ''">#{code},</if>
            <if test="type != null and type != ''">#{type},</if>
            <if test="dbConnectionId != null">#{dbConnectionId},</if>
            <if test="description != null and description != ''">#{description},</if>
            <if test="delFlag != null">#{delFlag},</if>
            <if test="createBy != null">#{createBy},</if>
            <if test="createTime != null">#{createTime},</if>
            <if test="updateBy != null">#{updateBy},</if>
            <if test="updateTime != null">#{updateTime},</if>
            <if test="remark != null">#{remark},</if>
         </trim>
    </insert>

    <update id="updateLpdatastorage" parameterType="Lpdatastorage">
        update datastorage
        <trim prefix="SET" suffixOverrides=",">
            <if test="name != null and name != ''">name = #{name},</if>
            <if test="moduleInfoId != null">moduleInfoId = #{moduleInfoId},</if>
            <if test="code != null and code != ''">code = #{code},</if>
            <if test="type != null and type != ''">type = #{type},</if>
            <if test="dbConnectionId != null">dbConnectionId = #{dbConnectionId},</if>
            <if test="description != null and description != ''">description = #{description},</if>
            <if test="delFlag != null">del_flag = #{delFlag},</if>
            <if test="createBy != null">create_by = #{createBy},</if>
            <if test="createTime != null">create_time = #{createTime},</if>
            <if test="updateBy != null">update_by = #{updateBy},</if>
            <if test="updateTime != null">update_time = #{updateTime},</if>
            <if test="remark != null">remark = #{remark},</if>
        </trim>
        where id = #{id}
    </update>

    <delete id="deleteLpdatastorageById" parameterType="Long">
        delete from datastorage where id = #{id}
    </delete>

    <delete id="deleteLpdatastorageByIds" parameterType="String">
        delete from datastorage where id in
        <foreach item="id" collection="array" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>
</mapper>