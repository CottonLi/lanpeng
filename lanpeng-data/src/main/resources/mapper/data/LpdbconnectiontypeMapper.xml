<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.lanpeng.data.mapper.LpdbconnectiontypeMapper">
    
    <resultMap type="Lpdbconnectiontype" id="LpdbconnectiontypeResult">
        <result property="id"    column="id"    />
        <result property="name"    column="name"    />
    </resultMap>

    <sql id="selectLpdbconnectiontypeVo">
        select id, name from dbconnectiontype
    </sql>

    <select id="selectLpdbconnectiontypeList" parameterType="Lpdbconnectiontype" resultMap="LpdbconnectiontypeResult">
        <include refid="selectLpdbconnectiontypeVo"/>
        <where>  
            <if test="name != null  and name != ''"> and name like concat('%', #{name}, '%')</if>
        </where>
    </select>
    
    <select id="selectLpdbconnectiontypeById" parameterType="Long" resultMap="LpdbconnectiontypeResult">
        <include refid="selectLpdbconnectiontypeVo"/>
        where id = #{id}
    </select>
        
    <insert id="insertLpdbconnectiontype" parameterType="Lpdbconnectiontype" useGeneratedKeys="true" keyProperty="id">
        insert into dbconnectiontype
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="name != null and name != ''">name,</if>
         </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="name != null and name != ''">#{name},</if>
         </trim>
    </insert>

    <update id="updateLpdbconnectiontype" parameterType="Lpdbconnectiontype">
        update dbconnectiontype
        <trim prefix="SET" suffixOverrides=",">
            <if test="name != null and name != ''">name = #{name},</if>
        </trim>
        where id = #{id}
    </update>

    <delete id="deleteLpdbconnectiontypeById" parameterType="Long">
        delete from dbconnectiontype where id = #{id}
    </delete>

    <delete id="deleteLpdbconnectiontypeByIds" parameterType="String">
        delete from dbconnectiontype where id in
        <foreach item="id" collection="array" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>
</mapper>