<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.lanpeng.data.mapper.MessageMapper">

    <resultMap type="Message" id="MessageResult">
        <result property="id"             column="id"      />
        <result property="title"          column="title"   />
        <result property="content"        column="content" />
        <result property="status"         column="status"          />
        <result property="createBy"       column="create_by"       />
        <result property="createTime"     column="create_time"     />
        <result property="updateBy"       column="update_by"       />
        <result property="updateTime"     column="update_time"     />
        <result property="remark"         column="remark"          />
    </resultMap>

    <sql id="selectMessageVo">
        select id, title, cast(content as char) as content, status, create_by, create_time, update_by, update_time, remark
        from message
    </sql>

    <select id="selectMessageById" parameterType="Long" resultMap="MessageResult">
        <include refid="selectMessageVo"/>
        where id = #{mid}
    </select>

    <select id="selectMessageList" parameterType="Message" resultMap="MessageResult">
        <include refid="selectMessageVo"/>
        <where>
            <if test="m.title != null and m.title != ''">
                AND title like concat('%', #{m.title}, '%')
            </if>
            <if test="m.createBy != null and m.createBy != ''">
                AND create_by like concat('%', #{m.createBy}, '%')
            </if>
        </where>
    </select>

    <insert id="insertMessage" parameterType="Message">
        insert into message (
        <if test="m.title != null and m.title != '' ">title, </if>
        <if test="m.content != null and m.content != '' ">content, </if>
        <if test="m.status != null and m.status != '' ">status, </if>
        <if test="m.remark != null and m.remark != ''">remark,</if>
        <if test="m.createBy != null and m.createBy != ''">create_by,</if>
        create_time
        )values(
        <if test="m.title != null and m.title != ''">#{m.title}, </if>
        <if test="m.content != null and m.content != ''">#{m.content}, </if>
        <if test="m.status != null and m.status != ''">#{m.status}, </if>
        <if test="m.remark != null and m.remark != ''">#{m.remark},</if>
        <if test="m.createBy != null and m.createBy != ''">#{m.createBy},</if>
        sysdate()
        )
    </insert>

    <update id="updateMessage" parameterType="Message">
        update message
        <set>
            <if test="m.title != null and m.title != ''">title = #{m.title}, </if>
            <if test="m.content != null">content = #{m.content}, </if>
            <if test="m.status != null and m.status != ''">status = #{m.status}, </if>
            <if test="m.updateBy != null and m.updateBy != ''">update_by = #{m.updateBy},</if>
            update_time = sysdate()
        </set>
        where id = #{m.id}
    </update>

    <delete id="deleteMessageById" parameterType="Long">
        delete from message where id = #{mid}
    </delete>

    <delete id="deleteMessageByIds" parameterType="Long">
        delete from message where id in
        <foreach item="messageId" collection="mids" open="(" separator="," close=")">
            #{messageId}
        </foreach>
    </delete>

</mapper>