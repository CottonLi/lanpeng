<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.lanpeng.data.mapper.MessageMapper">

    <resultMap type="MessageE" id="MessageEResult">
        <result property="id"             column="message_id"      />
        <result property="title"          column="message_title"   />
        <result property="content"        column="message_content" />
        <result property="status"         column="status"          />
        <result property="createBy"       column="create_by"       />
        <result property="createTime"     column="create_time"     />
        <result property="updateBy"       column="update_by"       />
        <result property="updateTime"     column="update_time"     />
        <result property="remark"         column="remark"          />
    </resultMap>

    <sql id="selectMessageVo">
        select message_id, message_title, cast(message_content as char) as message_content, status, create_by, create_time, update_by, update_time, remark
        from message
    </sql>

    <select id="selectMessageById" parameterType="Long" resultMap="MessageEResult">
        <include refid="selectMessageVo"/>
        where message_id = #{mid}
    </select>

    <select id="selectMessageList" parameterType="MessageE" resultMap="MessageEResult">
        <include refid="selectMessageVo"/>
        <where>
            <if test="m.title != null and m.title != ''">
                AND message_title like concat('%', #{m.title}, '%')
            </if>
            <if test="m.createBy != null and m.createBy != ''">
                AND create_by like concat('%', #{m.createBy}, '%')
            </if>
        </where>
    </select>

    <insert id="insertMessage" parameterType="MessageE">
        insert into message (
        <if test="m.title != null and m.title != '' ">message_title, </if>
        <if test="m.content != null and m.content != '' ">message_content, </if>
        <if test="m.status != null and m.status != '' ">status, </if>
        <if test="m.remark != null and m.remark != ''">remark,</if>
        <if test="m.createBy != null and m.createBy != ''">create_by,</if>
        create_time
        )values(
        <if test="m.title != null and m.title != ''">#{m.title}, </if>
        <if test="m.content != null and m.content != ''">#{m.content}, </if>
        <if test="m.status != null and m.status != ''">#{m.status}, </if>
        <if test="m.remark != null and m.remark != ''">#{m.remark},</if>
        <if test="m.createBy != null and m.createBy != ''">#{m.createBy},</if>
        sysdate()
        )
    </insert>

    <update id="updateMessage" parameterType="MessageE">
        update message
        <set>
            <if test="m.title != null and m.title != ''">message_title = #{m.title}, </if>
            <if test="m.content != null">message_content = #{m.content}, </if>
            <if test="m.status != null and m.status != ''">status = #{m.status}, </if>
            <if test="m.updateBy != null and m.updateBy != ''">update_by = #{m.updateBy},</if>
            update_time = sysdate()
        </set>
        where message_id = #{m.id}
    </update>

    <delete id="deleteMessageById" parameterType="Long">
        delete from message where message_id = #{mid}
    </delete>

    <delete id="deleteMessageByIds" parameterType="Long">
        delete from message where message_id in
        <foreach item="messageId" collection="mids" open="(" separator="," close=")">
            #{messageId}
        </foreach>
    </delete>

</mapper>